@model Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    <p>@Model.shortDescription</p>
    <p>Цена: @Model.price.ToString("c")</p>
    <p><a class="btn" style="background-color: red; color: white;" href="#">Подробнее</a></p>
</div>